<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/floorview">
    
	<ImageView 
	    android:id="@+id/iv_logo_co"
	    android:layout_width="220px"
	    android:layout_height="40px"
	    android:layout_marginTop="15px"
	    android:layout_marginLeft="30px"
	    android:background="@drawable/logo_kl"/>
	
	<ImageView 
	    android:id="@+id/iv_arrow"
	    android:layout_marginTop="110px"
	    android:layout_marginLeft="35px"
	    android:layout_width="92px"
	    android:layout_height="130px"
	    android:background="@drawable/arrow_up"/>
	
	<TextView 
	    android:id="@+id/tv_floor_display"
	    android:layout_width="108px"
	    android:layout_height="60px"
	    android:layout_marginLeft="155px"
	    android:layout_marginTop="130px"
	    android:textSize="42px"
	    android:gravity="center"
	    android:textColor="#FFFFFF"/>

	<ImageView
	    android:id="@+id/iv_elevator_status"
	    android:layout_width="252px"
	    android:layout_height="54px"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true" />
	    
</RelativeLayout>
